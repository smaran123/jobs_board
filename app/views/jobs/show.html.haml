#jobs
	.job
		%h2= @job.title
		%p= @job.description
		%p= @job.company
		%button.btn.btn-default= link_to "Apply for Job", @job.url

#links
	= link_to "Back", root_path, :class => "btn btn-info"
	= link_to "Edit", edit_job_path(@job), :class => "btn btn-warning"
	= link_to "Delete", job_path(@job), :method => :delete, :data => {:confirm => "are you sure?"}, 
	:class => "btn btn-danger"				
